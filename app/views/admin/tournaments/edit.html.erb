<div class='container'>
    <h3 class='mt-3'>商品編集</h3><br>
    <div class='row'>
        <%= form_with model: @item, url: admin_item_path do |f| %>
            <table class="table table-borderless">
                <div class='colspan-md-3'>
                        <tr>
                            <th><label for='inputimage'>商品画像</label></th>
                            <th><%= f.file_field :image %></th>
                        </tr>
                        <tr>
                            <th><label for='itemname'>商品名</label></th>
                            <th><%= f.text_field :name, rows: '5', id:'item[name]', placeholder: "商品名", class: 'form-control' %></th>
                        </tr>
                        <tr>
                            <th><label for='introduction'>商品説明</label></th>
                            <th><%= f.text_area :introduction, rows: '5', id:'item[introdution]', placeholder: "ここに説明文を記述します", class: 'form-control' %></th>
                        </tr>
                        <tr>
                            <th>ジャンル</th>
                            <th><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %></th>
                        </tr>
                        <tr>
                            <th><label for='price'>税抜価格</label></th>
                            <th><h4><%= f.text_field :price, row: '5', id:'item[price]', placeholder: '0000', class: 'form-control' %>円</h4></th>
                        </tr>
                        <tr>
                            <th><%= f.label '販売ステータス' %></th>
                            <th><%= f.radio_button :is_active, true %>
                                <%= f.label :is_active, '販売中', value: true %>
                                <%= f.radio_button :is_active, false %>
                                <%= f.label :is_active, '販売停止中', value: false %></th>
                        </tr>
                        <tr><th></th>
                            <th><%= f.submit "変更を保存", class: 'btn btn-outline-success' %></th>
                        </tr>

                </div>
            </table>
        <% end %>
    </div>
</div>