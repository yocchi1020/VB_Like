<div class='container'>
  <div class='row'>
    <div class="col">
      <h1 class="title d-flex justify-content-center m-2"><strong>いいねした大会</strong></h1>
      <div class="favorites_list">
        <% @favorite_tournaments.each do |tournament|%>
          <div class="favorites_list_row row border-top border-bottom border-dark p-3">
            <div class="favorites_list_col col-4 d-flex justify-content-center align-items-center"><%= link_to public_tournament_path(tournament) do %><h2><%= tournament.name %></h2><% end %></div>
            <div class="favorites_list_col col-2 d-flex justify-content-center align-items-center"><h4><%= tournament.prefecture.name %></h4></div>
            <div class="favorites_list_col col-3 d-flex justify-content-center align-items-center"><h4><%= tournament.category.name %></h4></div>
            <div class="favorites_list_col col-3 d-flex justify-content-center align-items-center"><%= image_tag tournament.image, {class: "fav_image"} if tournament.image.attached? %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>