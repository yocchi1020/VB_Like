<div class='container'>
  <div class='row'>
    <div class="col-12">
      <h1 class="title d-flex justify-content-center m-4"><%= @tournament_name %> 大会一覧<span>（全<%= @tournaments.count %>件）</span><%= link_to new_public_tournament_path do %><button type="button" class="btn btn-outline-info">大会を投稿する</button><% end %></h1>
      <div class='row'>
      	<div class="col-2 my-3">
      	  <%= render 'public/teams/prefecture', prefectures: @prefectures, categories: @categories %>
      	</div>
      	<div class="col-10">
      		<div class="row">
      		  <div class="row justify-content-center">
              <div class="tournaments_list">
                <% @tournaments.each do |tournament|%>
                  <div class="tournaments_list_row row border-top border-bottom border-dark p-3">
                    <div class="tournaments_list_col col-4 d-flex justify-content-center align-items-center"><%= link_to public_tournament_path(tournament) do %><h2><%= tournament.name %></h2><% end %></div>
                    <div class="tournaments_list_col col-2 d-flex justify-content-center align-items-center"><h4><%= tournament.prefecture.name %></h4></div>
                    <div class="tournaments_list_col col-3 d-flex justify-content-center align-items-center"><h4><%= tournament.category.name %></h4></div>
                    <div class="tournaments_list_col col-3 d-flex justify-content-center align-items-center"><%= image_tag tournament.image, {class: "tournament_image"} %></div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
    	</div>
    </div>
  </div>
</div>