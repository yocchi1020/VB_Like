<div class="container">
  <div class="row">
    <div class="col-lg-10 col-xs-offset-1">
      <h2>会員一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>ニックネーム</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @members.each do |member| %>
            <tr>
              <td><%= member.id %></td>
              <td><%= link_to admin_member_path(member) do %> <%= member.name %> <% end %></td>
              <td><%= member.nickname %></td>
              <td><%= member.email %></td>
              <td>
                <% if member.is_deleted? == true %>
                  <td class="text-danger text-center">退会</td>
  		          <% else %>
  		            <td class="text-success text-center">有効</td>
  		          <% end %>
              </td>
            </tr>
          <% end %>
            <!--each~endまで来たら繰り返し。２番以降からデータがなくなるまで繰り返す。-->
        </tbody>
      </table>
      <%= paginate @members %>
    </div>
  </div>
</div>